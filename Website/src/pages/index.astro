  <style>
    .main {
      min-height: calc(100vh - 200px);
      display: flex;
      flex-direction: column;
    }

    .container {
      max-width: 1400px;
      margin: 0 auto;
      padding: 0 3rem;
    }

    .hero {
      position: relative;
      padding: 6rem 0 8rem;
      overflow: hidden;
      background: 
        radial-gradient(ellipse 80% 50% at 50% -20%, rgba(201, 169, 97, 0.15), transparent),
        radial-gradient(circle at 100% 100%, rgba(184, 115, 51, 0.1), transparent);
    }

    .hero-background {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: 
        repeating-linear-gradient(45deg, transparent, transparent 100px, rgba(201, 169, 97, 0.02) 100px, rgba(201, 169, 97, 0.02) 200px);
      z-index: 0;
    }

    .hero-decoration {
      position: absolute;
      top: 0;
      right: 0;
      width: 50%;
      height: 100%;
      overflow: hidden;
      opacity: 0.15;
      z-index: 0;
    }

    .gear {
      position: absolute;
      font-size: 8rem;
      color: var(--accent-primary);
      filter: drop-shadow(0 0 20px var(--glow-color));
    }

    .gear-1 {
      top: 10%;
      right: 15%;
      animation: rotateClockwise 30s linear infinite;
    }

    .gear-2 {
      top: 40%;
      right: 5%;
      font-size: 12rem;
      animation: rotateCounterClockwise 40s linear infinite;
    }

    .gear-3 {
      bottom: 15%;
      right: 25%;
      font-size: 6rem;
      animation: rotateClockwise 25s linear infinite;
    }

    @keyframes rotateClockwise {
      from { transform: rotate(0deg); }
      to { transform: rotate(360deg); }
    }

    @keyframes rotateCounterClockwise {
      from { transform: rotate(360deg); }
      to { transform: rotate(0deg); }
    }

    .hero-content {
      position: relative;
      z-index: 1;
      max-width: 900px;
      text-align: left;
    }

    .badge {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      background: var(--bg-tertiary);
      border: 2px solid var(--accent-primary);
      padding: 0.625rem 1.5rem;
      border-radius: 50px;
      font-size: 0.875rem;
      font-weight: 700;
      color: var(--accent-primary);
      margin-bottom: 2rem;
      backdrop-filter: blur(10px);
      box-shadow: 0 0 20px var(--glow-color);
      text-transform: uppercase;
      letter-spacing: 0.05em;
      position: relative;
    }

    .badge::before {
      content: '';
      position: absolute;
      inset: -4px;
      border: 2px solid var(--accent-primary);
      border-radius: 50px;
      opacity: 0.3;
      animation: badgePulse 2s ease-in-out infinite;
    }

    @keyframes badgePulse {
      0%, 100% { transform: scale(1); opacity: 0.3; }
      50% { transform: scale(1.05); opacity: 0; }
    }

    .hero-title {
      font-size: 4.5rem;
      font-weight: 900;
      margin-bottom: 1.5rem;
      color: var(--text-primary);
      line-height: 1.05;
      letter-spacing: -0.03em;
      background: var(--gradient-industrial);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      text-shadow: 0 4px 20px var(--glow-color);
      position: relative;
    }

    .hero-subtitle {
      font-size: 1.25rem;
      color: var(--text-secondary);
      margin-bottom: 3rem;
      font-weight: 500;
      line-height: 1.8;
      max-width: 650px;
    }

    .server-info {
      display: grid;
      grid-template-columns: 2fr 1fr 1fr;
      gap: 1rem;
      max-width: 900px;
    }

    .info-card {
      background: linear-gradient(135deg, var(--bg-secondary) 0%, var(--bg-tertiary) 100%);
      border: 2px solid var(--border-color);
      border-radius: var(--radius-lg);
      padding: 1.5rem 1.25rem;
      display: flex;
      flex-direction: column;
      gap: 0.625rem;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      backdrop-filter: blur(10px);
      position: relative;
      overflow: hidden;
    }

    .info-primary {
      background: linear-gradient(135deg, var(--bg-tertiary), var(--bg-secondary));
    }

    .info-secondary {
      border-style: dashed;
    }

    .info-accent {
      background: linear-gradient(135deg, rgba(201, 169, 97, 0.08), var(--bg-secondary));
    }

    @media (max-width: 768px) {
      .server-info {
        grid-template-columns: 1fr;
      }
    }

    .info-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(201, 169, 97, 0.1), transparent);
      transition: left 0.6s ease;
    }

    .info-card:hover::before {
      left: 100%;
    }

    .info-card:hover {
      transform: translateY(-6px) scale(1.02);
      border-color: var(--accent-primary);
      box-shadow: 0 12px 40px var(--glow-color), 0 0 0 1px var(--accent-primary);
    }

    .label {
      font-size: 0.8125rem;
      color: var(--text-secondary);
      text-transform: uppercase;
      letter-spacing: 0.1em;
      font-weight: 600;
    }

    .server-ip {
      background: var(--bg-tertiary);
      padding: 0.75rem 1.25rem;
      border-radius: 10px;
      font-family: 'JetBrains Mono', 'Courier New', monospace;
      font-size: 1.125rem;
      color: var(--accent-primary);
      border: 1px solid var(--border-color);
      font-weight: 600;
      letter-spacing: 0.02em;
    }

    .value {
      font-size: 1.75rem;
      font-weight: 700;
      color: var(--text-primary);
    }

    .status-online {
      color: var(--accent-primary);
    }

    .carousel-section {
      padding: 6rem 0;
      background: 
        linear-gradient(180deg, var(--bg-primary) 0%, var(--bg-secondary) 50%, var(--bg-primary) 100%);
      position: relative;
    }

    .carousel-section::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 1px;
      background: var(--gradient-industrial);
      opacity: 0.3;
    }

    .section-title-showcase {
      font-size: 3rem;
      text-align: center;
      margin-bottom: 4rem;
      color: var(--text-primary);
      font-weight: 900;
      letter-spacing: -0.02em;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 1rem;
      position: relative;
    }

    .section-title-showcase::before,
    .section-title-showcase::after {
      content: '';
      flex: 1;
      height: 2px;
      background: linear-gradient(to right, transparent, var(--accent-primary), transparent);
      max-width: 200px;
    }

    .section-title-showcase::before {
      background: linear-gradient(to left, var(--accent-primary), transparent);
    }

    .section-title-showcase::after {
      background: linear-gradient(to right, var(--accent-primary), transparent);
    }

    .carousel {
      position: relative;
      max-width: 900px;
      margin: 0 auto;
      border-radius: var(--radius-2xl);
      overflow: hidden;
      aspect-ratio: 16/9;
      background: var(--bg-tertiary);
      border: 3px solid var(--border-color);
      box-shadow: 0 20px 60px var(--shadow-color);
    }

    .carousel-track {
      display: flex;
      transition: transform 0.5s ease-in-out;
      height: 100%;
    }

    .carousel-item {
      min-width: 100%;
      height: 100%;
      display: none;
    }

    .carousel-item.active {
      display: block;
    }

    .carousel-placeholder {
      width: 100%;
      height: 100%;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      background: linear-gradient(135deg, var(--bg-tertiary) 0%, var(--bg-secondary) 100%);
      color: var(--text-secondary);
    }

    .placeholder-icon {
      font-size: 5rem;
      margin-bottom: 1rem;
      opacity: 0.5;
    }

    .carousel-placeholder p {
      font-size: 1.25rem;
      font-weight: 600;
      opacity: 0.6;
    }

    .carousel-btn {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      background: rgba(26, 22, 20, 0.9);
      border: 2px solid var(--accent-primary);
      color: var(--accent-primary);
      font-size: 2rem;
      width: 3.5rem;
      height: 3.5rem;
      border-radius: 50%;
      cursor: pointer;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      display: flex;
      align-items: center;
      justify-content: center;
      backdrop-filter: blur(10px);
      z-index: 10;
      font-weight: 700;
    }

    [data-theme="light"] .carousel-btn {
      background: rgba(244, 232, 208, 0.95);
      border-color: var(--accent-primary);
      color: var(--accent-primary);
    }

    .carousel-btn:hover {
      background: var(--accent-primary);
      color: var(--bg-primary);
      transform: translateY(-50%) scale(1.15);
      box-shadow: 0 8px 24px var(--glow-color);
    }

    .carousel-btn.prev {
      left: 1.5rem;
    }

    .carousel-btn.next {
      right: 1.5rem;
    }

    .carousel-dots {
      position: absolute;
      bottom: 2rem;
      left: 50%;
      transform: translateX(-50%);
      display: flex;
      gap: 0.75rem;
      z-index: 10;
    }

    .dot {
      width: 0.75rem;
      height: 0.75rem;
      border-radius: 50%;
      background: var(--border-color);
      border: none;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .dot:hover {
      background: var(--text-secondary);
    }

    .dot.active {
      background: var(--accent-primary);
      width: 2rem;
      border-radius: 1rem;
    }

    .features {
      padding: 7rem 0;
      position: relative;
      background: 
        radial-gradient(circle at 0% 50%, rgba(201, 169, 97, 0.05), transparent 50%),
        radial-gradient(circle at 100% 50%, rgba(184, 115, 51, 0.05), transparent 50%);
    }

    .section-title {
      font-size: 3.5rem;
      text-align: center;
      margin-bottom: 5rem;
      color: var(--text-primary);
      font-weight: 900;
      letter-spacing: -0.03em;
      position: relative;
      display: inline-block;
      width: 100%;
    }

    .section-title::after {
      content: '';
      position: absolute;
      bottom: -1rem;
      left: 50%;
      transform: translateX(-50%);
      width: 120px;
      height: 4px;
      background: var(--gradient-industrial);
      border-radius: 2px;
    }

    .features-grid {
      display: grid;
      grid-template-columns: repeat(6, 1fr);
      gap: 1.5rem;
      max-width: 1300px;
      margin: 0 auto;
      grid-auto-rows: minmax(200px, auto);
    }

    .feature-large {
      grid-column: span 2;
      grid-row: span 2;
    }

    .feature-wide {
      grid-column: span 2;
    }

    @media (max-width: 1200px) {
      .features-grid {
        grid-template-columns: repeat(4, 1fr);
      }
    }

    @media (max-width: 900px) {
      .features-grid {
        grid-template-columns: repeat(2, 1fr);
      }
      
      .feature-large {
        grid-column: span 2;
        grid-row: span 1;
      }
    }

    .feature-card {
      background: var(--bg-secondary);
      border: 2px solid var(--border-color);
      border-radius: var(--radius-xl);
      padding: 2rem 1.75rem;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      position: relative;
      overflow: hidden;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }

    .feature-number {
      position: absolute;
      top: 1rem;
      right: 1rem;
      font-size: 3rem;
      font-weight: 900;
      color: var(--accent-primary);
      opacity: 0.1;
      line-height: 1;
      transition: all 0.4s ease;
    }

    .feature-card:hover .feature-number {
      opacity: 0.2;
      transform: scale(1.2);
    }

    .feature-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: var(--gradient-industrial);
      opacity: 0;
      transition: opacity 0.4s ease;
      z-index: 0;
    }

    .feature-card::after {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 5px;
      background: var(--gradient-industrial);
      transform: scaleX(0);
      transform-origin: left;
      transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .feature-card > * {
      position: relative;
      z-index: 1;
    }

    .feature-card:hover {
      transform: translateY(-12px) scale(1.02);
      border-color: var(--accent-primary);
      box-shadow: 
        0 20px 60px var(--glow-color),
        0 0 0 1px var(--accent-primary);
    }

    .feature-card:hover::before {
      opacity: 0.03;
    }

    .feature-card:hover::after {
      transform: scaleX(1);
    }

    .feature-icon {
      font-size: 3rem;
      margin-bottom: 1rem;
      display: inline-block;
      transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
      filter: drop-shadow(0 0 10px var(--glow-color));
