  <script>
    // Language switcher
    const updateTranslations = () => {
      const lang = localStorage.getItem('language') || 'en';
      document.documentElement.setAttribute('lang', lang);
      
      document.querySelectorAll('[data-en][data-de]').forEach(el => {
        const element = el as HTMLElement;
        if (lang === 'en') {
          element.textContent = element.getAttribute('data-en') || '';
        } else {
          element.textContent = element.getAttribute('data-de') || '';
        }
      });
    };

    // Initialize
    updateTranslations();

    // Listen for language changes
    document.addEventListener('language-change', updateTranslations);

    // Carousel functionality
    let currentSlide = 0;
    const slides = document.querySelectorAll('.carousel-item');
    const dots = document.querySelectorAll('.dot');
    const prevBtn = document.querySelector('.carousel-btn.prev');
    const nextBtn = document.querySelector('.carousel-btn.next');

    const showSlide = (index: number) => {
      slides.forEach((slide, i) => {
        slide.classList.toggle('active', i === index);
      });
      dots.forEach((dot, i) => {
        dot.classList.toggle('active', i === index);
      });
      currentSlide = index;
    };

    const nextSlide = () => {
      const next = (currentSlide + 1) % slides.length;
      showSlide(next);
    };

    const prevSlide = () => {
      const prev = (currentSlide - 1 + slides.length) % slides.length;
      showSlide(prev);
    };

    nextBtn?.addEventListener('click', nextSlide);
    prevBtn?.addEventListener('click', prevSlide);

    dots.forEach((dot, index) => {
      dot.addEventListener('click', () => showSlide(index));
    });

    // Auto-advance carousel
    setInterval(nextSlide, 5000);

    // Copy to clipboard functionality
    const ctaButton = document.querySelector('.cta-button');
    const buttonText = ctaButton?.querySelector('.button-text');
    
    ctaButton?.addEventListener('click', () => {
      const serverIp = 'play.yourserver.com';
      navigator.clipboard.writeText(serverIp).then(() => {
        const originalText = buttonText?.textContent;
        const lang = localStorage.getItem('language') || 'en';
        if (buttonText) {
          buttonText.textContent = lang === 'en' ? 'Copied!' : 'Kopiert!';
        }
        setTimeout(() => {
          if (buttonText && originalText) {
            buttonText.textContent = originalText;
          }
        }, 2000);
      });
    });
  </script>
