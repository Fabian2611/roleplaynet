<header class="header">
  <div class="header-accent-line"></div>
  <div class="container">
    <div class="logo">
      <div class="logo-icon">‚öô</div>
      <div class="logo-text">
        <h1>Industrial Roleplay</h1>
        <span class="logo-subtitle">EST. 1850</span>
      </div>
    </div>
    
    <nav class="nav">
      <a href="/" class="nav-link active">
        <span class="nav-icon">üèõÔ∏è</span>
        <span>General</span>
      </a>
    </nav>

    <div class="controls">
      <button id="lang-toggle" class="control-btn">
        <span class="lang-text">EN</span>
      </button>
      <button id="theme-toggle" class="control-btn">
        <span class="theme-icon">‚òÄÔ∏è</span>
      </button>
    </div>
  </div>
  <div class="header-bottom-accent"></div>
</header>

<style>
  .header {
    background: var(--bg-secondary);
    border-bottom: 2px solid var(--accent-primary);
    position: sticky;
    top: 0;
    z-index: 100;
    box-shadow: 0 4px 12px var(--shadow-color);
  }

  .header-accent-line {
    height: 3px;
    background: var(--gradient-industrial);
  }

  .header-bottom-accent {
    height: 1px;
    background: linear-gradient(90deg, 
      transparent 0%, 
      var(--accent-primary) 20%, 
      var(--accent-secondary) 50%, 
      var(--accent-primary) 80%, 
      transparent 100%);
    opacity: 0.5;
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: var(--space-md) var(--space-xl);
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-lg);
  }

  .logo {
    display: flex;
    align-items: center;
    gap: var(--space-md);
  }

  .logo-icon {
    font-size: 2.5rem;
    animation: rotate 20s linear infinite;
    filter: drop-shadow(0 0 8px var(--accent-primary));
  }

  @keyframes rotate {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  .logo-text h1 {
    font-size: 1.5rem;
    font-weight: var(--weight-extrabold);
    color: var(--accent-primary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    line-height: 1.2;
    text-shadow: 0 0 20px rgba(201, 169, 97, 0.3);
  }

  .logo-subtitle {
    font-size: 0.75rem;
    color: var(--accent-secondary);
    font-weight: var(--weight-semibold);
    letter-spacing: 0.2em;
    text-transform: uppercase;
  }

  .nav {
    display: flex;
    gap: var(--space-xs);
    flex: 1;
  }

  .nav-link {
    padding: var(--space-sm) var(--space-md);
    border: 1px solid transparent;
    border-radius: var(--radius-md);
    transition: all var(--transition-base);
    color: var(--text-secondary);
    font-weight: var(--weight-medium);
    font-size: 0.9375rem;
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    position: relative;
  }

  .nav-icon {
    font-size: 1.2rem;
  }

  .nav-link::before {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%) scaleX(0);
    width: 80%;
    height: 2px;
    background: var(--gradient-industrial);
    transition: transform var(--transition-base);
  }

  .nav-link:hover::before,
  .nav-link.active::before {
    transform: translateX(-50%) scaleX(1);
  }

  .nav-link:hover {
    color: var(--text-primary);
    border-color: var(--border-color);
    background: rgba(201, 169, 97, 0.05);
  }

  .nav-link.active {
    color: var(--accent-primary);
    font-weight: var(--weight-semibold);
    border-color: var(--accent-primary);
    background: rgba(201, 169, 97, 0.1);
  }

  .controls {
    display: flex;
    gap: var(--space-sm);
  }

  .control-btn {
    background: var(--bg-tertiary);
    border: 2px solid var(--border-color);
    border-radius: var(--radius-md);
    padding: var(--space-sm) var(--space-md);
    cursor: pointer;
    font-size: 0.9375rem;
    color: var(--text-primary);
    transition: all var(--transition-base);
    min-width: 3.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: var(--weight-semibold);
    position: relative;
    overflow: hidden;
  }

  .control-btn::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%) scale(0);
    width: 100%;
    height: 100%;
    background: var(--gradient-industrial);
    border-radius: var(--radius-md);
    transition: transform var(--transition-base);
    z-index: -1;
  }

  .control-btn:hover::before {
    transform: translate(-50%, -50%) scale(1);
  }

  .control-btn:hover {
    color: var(--bg-primary);
    border-color: var(--accent-primary);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px var(--glow-color);
  }

  .lang-text {
    font-weight: var(--weight-bold);
  }

  .theme-icon {
    font-size: 1.125rem;
  }

  @media (max-width: 768px) {
    .container {
      flex-wrap: wrap;
      padding: var(--space-md) var(--space-md);
    }

    .logo-text h1 {
      font-size: 1.25rem;
    }

    .nav {
      order: 3;
      width: 100%;
      justify-content: center;
      margin-top: var(--space-sm);
    }
  }
</style>

<script>
  const themeToggle = document.getElementById('theme-toggle');
  const themeIcon = themeToggle?.querySelector('.theme-icon');
  const langToggle = document.getElementById('lang-toggle');
  const langText = langToggle?.querySelector('.lang-text');

  let currentLang = localStorage.getItem('language') || 'en';

  const updateThemeIcon = () => {
    const theme = localStorage.getItem('theme') || 'dark';
    if (themeIcon) {
      themeIcon.textContent = theme === 'dark' ? '‚òÄÔ∏è' : 'üåô';
    }
  };

  const updateLangText = () => {
    if (langText) {
      langText.textContent = currentLang.toUpperCase();
    }
  };

  updateThemeIcon();
  updateLangText();

  themeToggle?.addEventListener('click', () => {
    const currentTheme = localStorage.getItem('theme') || 'dark';
    const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
    localStorage.setItem('theme', newTheme);
    document.documentElement.setAttribute('data-theme', newTheme);
    updateThemeIcon();
  });

  langToggle?.addEventListener('click', () => {
    currentLang = currentLang === 'en' ? 'de' : 'en';
    updateLangText();
    document.dispatchEvent(new CustomEvent('language-toggle', { 
      detail: { language: currentLang } 
    }));
  });
</script>
